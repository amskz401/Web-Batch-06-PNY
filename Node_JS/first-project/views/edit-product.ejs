<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Add product</h1>
      <form action="/update-product" method="post">
        <div class="form-group">
          <label for="">Title</label>
          <input
            type="text"
            name="title"
            placeholder="Enter Title"
            class="form-control"
            value="<%= product.title %>"
          />
        </div>
        <div class="form-group">
          <label for="">Price</label>
          <input
            type="text"
            name="price"
            placeholder="Enter Price"
            class="form-control"
            value="<%= product.price %>"
          />
        </div>
        <div class="form-group">
          <label for="">Stock</label>
          <input
            type="text"
            name="stock"
            placeholder="Enter Title"
            class="form-control"
            value="<%= product.stock %>"
          />
        </div>
        <div class="form-group">
          <input type="hidden" name="_id" value="<%= product._id%>" />
          <input type="submit" value="Update Product" class="btn btn-primary" />
        </div>
      </form>
    </div>
  </div>
</div>
