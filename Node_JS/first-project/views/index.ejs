<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Product List</h1>
      <table class="table">
        <thead>
          <tr>
            <th>#</th>
            <th scope="col">Title</th>
            <th scope="col">Price</th>
            <th scope="col">Stock</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach( prod => { %>
          <tr>
            <td>
              <img src="/images/<%= prod.image %>" width="150px" alt="" />
            </td>
            <td scope="row"><%= prod.title %></td>
            <td scope="row"><%= prod.price %></td>
            <td scope="row"><%= prod.stock %></td>
            <td>
              <a href="/edit-product/<%= prod._id %>" class="btn btn-primary"
                >Edit</a
              >
              <a
                onclick="return confirm('are you sure ?')"
                href="/del-product/<%= prod._id %>"
                class="btn btn-danger"
                >Del</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
