<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Product List</h1>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Title</th>
            <th scope="col">Price</th>
            <th scope="col">Stock</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach( prod => { %>
          <tr>
            <td scope="row"><%= prod.title %></td>
            <td scope="row"><%= prod.price %></td>
            <td scope="row"><%= prod.stock %></td>
            <td>
              <a href="/edit-product" class="btn btn-primary">Edit</a>
              <a href="/del-product" class="btn btn-danger">Del</a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
