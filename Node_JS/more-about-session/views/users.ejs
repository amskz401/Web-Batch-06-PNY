<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="mt-5 mb-5 border-bottom">User Data</h1>
      <% if (messages.info) { %>
      <div class="alert alert-success">
        <strong><%= messages.info %></strong>
      </div>
      <% } %>
      <table class="table">
        <tr>
          <th>ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Action</th>
        </tr>
        <% data.forEach(user => { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td><%= user.phone %></td>
          <td>
            <a href="/edit-user/<%= user.id %>" class="btn btn-primary">Edit</a>
            <a
              onclick="return confirm('are you sure')"
              href="/delete-user/<%= user.id %>"
              class="btn btn-danger"
              >Delete</a
            >
          </td>
        </tr>
        <% }) %>
      </table>
    </div>
  </div>
</div>
